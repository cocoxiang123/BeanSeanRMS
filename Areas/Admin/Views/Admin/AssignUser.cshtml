@model List<UserViewModel>
@{
    ViewData["Title"] = "AssignUser";
}

<h4>AssignUser</h4>

<div class="row custom-form">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            @for (int i = 0; i < Model.Count; i++)
            {
                <input type="hidden" asp-for="@Model[i].Id" />
                <input type="hidden" asp-for="@Model[i].Name" />
                <div class="form-check">                  
                    <input asp-for="@Model[i].flag" class="form-check-input" />
                    <label asp-for="@Model[i].flag" class="control-label">@Model[i].Name</label>
                </div>
            }                     
        <div class="form-group">
            <input type="submit" value="Submit" class="btn btn-primary" />
            <a asp-action="UserRoleIndex" asp-route-id="@ViewBag.Id" class="btn btn-primary" >Abort</a>
        </div>
        </form>
    </div>
</div>