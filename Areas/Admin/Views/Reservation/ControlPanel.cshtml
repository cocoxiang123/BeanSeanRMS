@model IEnumerable<Sitting> 

@{
    ViewData["Title"] = "ControlPanel";
}

<h1>ControlPanel</h1>

<h4>Reservation</h4>
<hr />

<div class="row">
    <div class="col-md-4 m-sm-auto">
        <form asp-action="ControlPanel">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label class="control-label"></label>
                <select a class ="form-control" name="id" asp-items="@(new SelectList(ViewBag.SelectSittings,"SittingId","Start"))"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Next" class="btn btn-primary" />
                <a asp-action="ReservationIndexIndex" class="btn btn-primary">Back to List</a>
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
